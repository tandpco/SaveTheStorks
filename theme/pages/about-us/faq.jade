theme:template(title="About", name="_project")
  content
    #about(:load=":api(3.0).content(site/about-page-new) as questions").table
      div.banner(style="background-image: url({questions.relationships(faqimage,attachments).first.version(,)});")
        h1 About&nbsp;
          strong Save The Storks
          p.small A new kind of pro-life organization for a new kind of pro-life movement.
        .tabs
          a(href='/about-us') Our Mission
          a(href='/about-us/strategy') Our Strategy
          a(href='/about-us/our-uniqueness') Our Uniqueness
          a(href='/about-us/our-name') Our Name
          a(href='/about-us/staff') Our Staff
          a(href='/about-us/faq', class='active') FAQ
      div.container
        div.tabs
          .tab.in#faq
            .row
              .col.width-50.answers
                ul.faq
                  li(:load="questions.relationships(faq) as question", :iterate="self", data-target='\#{question.id}') {question.content.question}
              .col.width-50.questions
                div.question(:load="questions.relationships(faq) as question", :iterate="self", id='{question.id}')
                  strong {question.content.question}
                  p {question.content.answer}
