include ../../includes/sidebar

theme:template(title="Stork Bus", name="_project")
  content
    div(:load=":api(3.0).content(site.stork-bus) as bus")
      .modal.video: .container: .video-wrapper.nullify
        {bus.content.busvideo}
      .overlay
      .consulting.design.table
        .banner(style='background-image: url({bus.relationships(specheader,attachments).first.version(,)}); margin-bottom: 0;')
          h1 About Our 
            strong Stork Bus
            p.small(style="color: #FFF;") More than 3 in 5 women who board a Stork Bus choose life.
            a(href='#', class='btn btn-green', style='line-height: 42px; font-size: 14px; letter-spacing: 0.15px; padding: 0 30px;', id='video') Watch A Quick Video
          .tabs
            a(href='/stork-bus') Mobile Partnership
            a(href='/stork-bus/design') Stork Bus Design
            a(href='/stork-bus/specs', class='active') Stork Bus Specs
            a(href='/stork-bus/strategies') Stork Bus Strategies
        .bus-slider-area
          .bus-slider-nav
            .previous: i.slider-nav.prev.fa.fa-angle-left
            .next: i.slider-nav.next.fa.fa-angle-right
          .bus-slider
            ul
              li(:load=":api(3.0).content(site.stork-bus).relationships(specsslider) as slide", :iterate="self", style='background-image: url({slide.relationships(image,attachments).first.version(,)})')
                .content: .container.thin
                  {slide.content.content}
                  a(class='gallery', href='/gallery?view=photos') View The Gallery
                .section.blackout(style='margin: 0; padding: 0;'): .container
                  img(src='{slide.relationships(graphic,attachments).first.version(1000,auto,100)}')
