include ../../includes/sidebar

theme:template(title="Stork Bus", name="_project")
  content
    div(:load=":api(3.0).content(site.stork-bus) as bus")
      .modal.video: .container: .video-wrapper.nullify
        {bus.content.busvideo}
      .partnership.table
        .banner(style="background-image:url({bus.relationships(mobileheader,attachments).first.version(,)})")
          h1 About Our 
            strong Stork Bus
            p.small(style="color: #FFF;") At least 4 out of 5 women who board a Stork Bus choose life.
            a(href='#', class='btn btn-green', style='line-height: 42px; font-size: 14px; letter-spacing: 0.15px; padding: 0 30px;', id='video') Watch A Quick Video
          .tabs
            a(href='/stork-bus', class='active') Mobile Partnership
            a(href='/stork-bus/design') Stork Bus Design
            a(href='/stork-bus/specs') Stork Bus Specs
            a(href='/stork-bus/strategies') Stork Bus Strategies
        .container.thin
          .section
            .section-row
              .img: img(src='{bus.relationships(mobileoneimg,attachments).first.version(,)}')
              .text: p {bus.content.mobileonetext}
            .section-row
              .text: p {bus.content.mobiletwotext}
              .img: img(src='{bus.relationships(mobiletwoimg,attachments).first.version(,)}')
            .section-row
              .img: img(src='{bus.relationships(mobilethreeimg,attachments).first.version(,)}')
              .text: p {bus.content.mobilethreetext}
        .bus-footer.align-center: .container
          h1 Why Go Mobile With Save The Storks?
          .row.columns
            .col.width-33
              .img: img(src='{bus.relationships(whygomobilecol1img,attachments).first.version(,)}')
              {bus.content.whygomobilecol1txt}
            .col.width-33.middle
              .img: img(src='{bus.relationships(whygomobilecol2img,attachments).first.version(,)}')
              {bus.content.whygomobilecol2txt}
            .col.width-33
              .img: img(src='{bus.relationships(whygomobilecol3img,attachments).first.version(,)}')
              {bus.content.whygomobilecol3txt}
        .overlay
        theme:embed(file="includes/side-nav")

