include ../../includes/sidebar

theme:template(title="About", name="_project")
  content
    #about(:load=":api(3.0).content(site/about-page) as project")
      div.banner.index
        h1 About&nbsp;
          strong Save The Storks
          p.small Building the next wave of the pro-life movement.
        ul.tabs
          li(class='active aboutLink', data-target='#mission') Our Mission
          li(class='aboutLink', data-target='#team') 
            a(href="ourTeam-test") Our Strategy
          li(class='aboutLink', data-target='#story') 
            a(href="ourStory-test") Our Uniqueness
          li(class='aboutLink', data-target='#storks') 
            a(href="whyStorks-test") Our Name
          li(class='aboutLink', data-target='#staff') 
            a(href="ourStaff-test") Our Staff
          li(class='aboutLink', data-target='#faq') 
            a(href="faq-test") FAQ
      div.container
        div.tabs
          .tab.in#mission
            {project.content.intro}
            .row
              .col.width-50
                img(src='{project.relationships(leftimage,attachments).first.version()}', alt='Stork Bus', title='Stork Bus')
              .col.width-50
                img(src='{project.relationships(rightimage,attachments).first.version()}', alt='Stork Bus Interior', title='Stork Bus Interior')
            blockquote {project.content.blockquote}
            {project.content.maincontent}
          
      hr
      +footer
      +sidebar

