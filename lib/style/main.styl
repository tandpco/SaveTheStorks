@import 'nib'
@import 'partials/_settings'
@import 'partials/_reset'
@import 'partials/_layout'
@import 'partials/_forms'
@import 'partials/icons'
@import 'partials/_retailBanner'
@import 'partials/_signUp'
@import 'partials/_home'
@import 'partials/_completedProjects'

// @TODO: MOVE TO MIXIN
.text-center
  text-align center
.test
	clearfix()
*
	font-family $font_primary
#home
	position relative
	z-index 1
#wrapper
	overflow-x hidden
body.no-scroll
	overflow-y hidden
.modal.video
	display none
	opacity 0
	height 0
	padding 25px
	width 100%
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	z-index 0
	transition opacity 0.3s ease
	.video-wrapper
		margin 0 auto
.overlay
	height 0
	opacity 0
	position absolute
	left 0
	right 0
	top 0
	bottom 0
	background rgba(#000,0.75)
	z-index 1
		
#canvas
	position relative
	transparent translateX(0)
	transition .3s ease all
	&.show-nav
		transform translateX(-320px)
		&:after
			transition all 0.3s ease
			content ''
			position absolute
			left 0
			right 0
			top 0
			bottom 0
			width 100%
			height 100%
			background rgba(#FFF, 0.6)
			z-index 999
.sideMenu
	background #1D1F20
	bottom 0
	color #666
	position absolute
	right -320px
	top 0
	height 100%
	width 320px
	overflow-y scroll
	z-index 9999
	a#account
		color #CFCFCF
		text-decoration none
		&:hover, &:active
			color darken(#CFCFCF, 10%)
		.myAccount
			background #151617
			padding 20px 30px
			font-size 16px
			font-weight 100
			vertical-align middle
			span
				margin-right 5px
				i
					font-size 24px
					vertical-align middle
	ul.main-nav
		padding 15px 30px
		margin 0
		list-style-type none
		li
			font-size 20px
			margin-bottom 15px
			a
				color #FFF
				font-weight 300
				text-decoration none
				&:hover, &:active
					color #CFCFCF
	div.buttons
		padding 15px 30px
		a
			border-radius 3px
			color #FFF
			display block
			font-size 16px
			letter-spacing 0.175em
			padding 10px 0
			text-align center
			text-decoration none
			text-transform uppercase
			transition all 0.3s ease
			width 180px
		a#donate
			background #59C77F
			border 2px solid #59C77F
			margin-bottom 10px
			&:hover, &:active
				background darken(#59C77F, 25%)
				border 2px solid darken(#59C77F, 25%)
		a#join
			background transparent
			border 2px solid #FFF
			&:hover, &:active
				background rgba(#FFF, 0.2)
	ul.sub-nav
		padding 15px 30px
		margin 0
		list-style-type none
		li
			font-size 18px
			margin-bottom 5px
			a
				color #CFCFCF
				font-weight 100
				text-decoration none
				&:hover, &:active
					color darken(#CFCFCF, 15%)
	div.social
		margin-bottom 60px
		padding 20px 30px
		span.icon
			border-radius 2px
			color #FFF
			font-size 22px
			margin-right 10px
			padding 9px 6px 6px
			&.facebook
				background #3B5998
			&.twitter
				background #28A9E0
			&.pinterest
				background #CB2027
			&.instagram
				background #375989
	div.credits
		font-weight thin
		padding 15px 30px
		a
			border 1px solid
			color #666
			display inline-block
			margin-top 5px
			padding 5px 10px
			text-decoration none
			text-transform uppercase
	span.close
		position absolute
		top 15px
		right 30px
		height 30px
		width 30px
		z-index 9999
		cursor pointer
		&:hover
			&:after, &:before
				background #CFCFCF
		&:after, &:before
			content ''
			position absolute
			width 20px
			height 2px
			background #FFF
			top 15px
		&:before
			left 4px
			transform rotate(45deg)
		&:after
			transform rotate(-45deg)
	
a.button, button.button
	border-radius 2px
.pull-right
	float right
.pull-left
	float left

body.index
	header
		padding-left 50px
header
	display block
	height auto
	width 100%
	clearfix()
	h1.pull-left
		padding-left 30px
		@media (max-width: 849px)
			float none
			text-align center
			padding-right 30px
		img
			max-width 100%
	a
		text-align center
		text-decoration none
		outline none
	@media (max-width: 849px)
		.pull-right
			float none
	#menuToggle
		background #F1F5F6
		color #313436
	#donate
		background #BCEBF6
		color #46C1DD
		i
			margin-right 15px
			position relative
			&:before
				position absolute
				top -3px
				font-size 23px
	#menuToggle, #donate
		display inline-block
		padding 45px 0
		letter-spacing 0.075em
		text-transform uppercase
		@media (max-width: 849px)
			width 50%
		@media (min-width: 850px)
			min-width 200px
			max-width 250px
		@extend .text-center
div.funding-bar
	background $color_ghost
	color #FFFFFF
	font-size 20px
	padding 20px 0
	a.button
		background #E6756F
		font-size 16px
		text-transform uppercase
		letter-spacing 0.075em
	.progress
		background rgba(#000,0.3)
		height 8px
		margin-top 33px
		overflow hidden
		width 100%
		.progress-bar
			background #46C1DD
			height 10px
			width 75%
	.small
		margin-top 8px
		font-size 12px
	small
		color #8F9395
		font-size 10px
		margin-left 5px
	.counter
		margin-top -1px
	@media (max-width: 768px)
		.pull-right
			float none
			text-align center
	span.one, span.two
		display inline-block
		position relative
		div.weeks, div.days
			color #8F9395
			font-size 10px
			margin-left 3px
			position absolute
	span.letterBox
		background rgba(#000,0.15)
		border-radius 1px
		display inline-block
		font-size 14px
		margin-right 10px
		padding 8px 10px
	span.numberBox
		background rgba(#000,0.3)
		border-radius 1px
		display inline-block
		font-size 16px
		padding 6px 10px
		margin 2px
		&.split
			margin-right 10px
.jumbotron
	background-color #46C1DD
	// background-image url('../images/jumbotronBanner.png')
	background-position center center
	background-size cover
	position relative
	height 350px
	&:after
		content ""
		position absolute
		left 0
		right 0
		top 0
		bottom 0
		background-image linear-gradient(0deg, rgba(#000,0.4), rgba(#000,0))
.headline
	.portrait
		background-color #F1F5F6
		background-size cover
		box-shadow 0 0 3px 3px rgba(#000,0.2)
		border 5px solid white
		border-radius 5px
		margin-right 25px
		margin-top -100px
		overflow hidden
		position relative
		height 170px
		width 180px
		z-index 999
		@media (max-width: 768px)
			margin-bottom 25px
		img
			position absolute
			left 0
			right 0
			top 50%
			width 100%
			margin-top -85px
		@extend .pull-left
	h1
		color darken($color_ghost, 10%)
		font-size 37px
		& > .small
			font-weight 300
			font-size 20px
.content
	#sidebar
		.panel
			background #F1F5F6
			padding 30px 20px
			position relative
			h4
				font-weight 600
				margin 0
				text-transform uppercase
				vertical-align middle
				i
					font-size 24px
					vertical-align middle
			hr
				border 3px solid darken(#F1F5F6, 15%)
				margin 10px 0
			.row:first-of-type
				margin-top 15px
				margin-bottom 5px
			ul.donors
				color #313436
				font-weight 300
				font-size 18px
				list-style-type none
				padding 0
				li
					clearfix()
					margin-bottom 10px
					&:last-child
						margin-bottom 0
			&#share
				margin-top 15px
				i.icon-chat-bubble
					font-size 18px
				a.share
					background transparent
					text-transform uppercase
					margin-bottom 10px
					@media (min-width: 769px)
						padding 5px 0 5px 50px
					@media (max-width: 768px)
						padding 5px 0 5px 25px
					text-align left
					height auto
					font-size 16px
					&:first-of-type
						margin-top 20px
					&.facebook
						border 1px solid #3B5998
						color #3B5998
						&:hover, &:focus, &:active
							background #3B5998
							color #FFF
					&.twitter
						border 1px solid #55ACEE
						color #55ACEE
						&:hover, &:focus, &:active
							background #55ACEE
							color #FFF
					&.email
						border 1px solid #EE7C4A
						color #EE7C4A
						&:hover, &:focus, &:active
							background #EE7C4A
							color #FFF
			.col.width-25
				& > span.numberBox
					border 1px solid darken(#F1F5F6, 15%)
					border-radius 3px
					display inline-block
					font-size 18px
					margin 0 0 10px
					padding 5px 0
					text-align center
					width 100%
					&:hover
						background darken(#F1F5F6, 15%)
						cursor pointer
					&:active, &.active
						background #59C77F
						border 1px solid #3B8956
						color #FFFFFF
						cursor pointer
			input[type='text']
				padding-left 30px
			.cash
				position relative
				i
					font-style normal
					left 15px
					position absolute
					top 0
			button.button
				background #E6756F
				color #FFF
				cursor pointer
				font-size 16px
				text-transform uppercase
				letter-spacing 0.075em
		.didYouKnow
			border solid #E5E5E5
			box-shadow 0px 0px 4px 0px rgba(#000,0.2)
			border-radius 3px
			border-width 1px 1px 1px 1px
			letter-spacing 1px
			margin 15px 0
			padding 30px 
			text-align center
			h4
				color #46C1DD
				font-size 16px
				text-transform uppercase
				margin 0
				i
					font-size 24px
			p
				font-size 18px
				margin 10px 0 15px
				letter-spacing 1px
				line-height 26px
			a.button
				border-radius 3px
				text-transform uppercase
				i
					margin-right 5px
				&.twitter
					background #55ACEE
					&:hover, &:active
						background darken(#55ACEE, 15%)
	#main
		@media(max-width: 768px)
			.col.width-10
				display none
		div.tab-content#updates, div.tab-content#projectDetails
			display none
		div.tabs
			clearfix()
			.tab
				border-color #BCBCC2
				border-style solid
				border-width 0 0 1px 0
				font-size 14px
				font-weight 600
				letter-spacing 1px
				padding 15px
				position relative
				text-align center
				text-transform uppercase
				span.updates
					background #E6756F
					border-radius 2px
					color #FFF
					font-size 10px
					letter-spacing 0
					margin-left 4px
					padding 2px 4px
					position relative
					top -1px
				& > a
					color #919191
					text-decoration none
				&:nth-child(2)
					&.active:after
						display none
					@media (min-width: 769px)
						&:after
							background-color #BCBCC2
							content ''
							position absolute
							right -1px
							top 13px
							height 20px
							width 1px
				&.active
					@media (min-width: 769px)
						border-width 1px 1px 0 1px
					& > a
						color #383838
		div.content
			margin-top 15px
			padding 5px
			p
				font-size 18px
				font-family $font_tisa
				line-height 30px
				&.lead
					font-size 20px
					font-family $font_primary
					font-weight bold
// NAV ICON
i.nav-toggle
	display inline-block
	height 7px
	margin-left 5px
	width 20px
	span, span:before, span:after
		height 2px
		width 12px
		background black
		position absolute
		display block
		transition all 0.25s ease-in-out
		content ""
	span:before
		position relative
		top -4px
	span:after
		position relative
		bottom -2px
	&.active
		span
			background transparent
		span:before
			top 0
			transform rotate(45deg)
		span:after
			bottom 2px
			transform rotate(-45deg)