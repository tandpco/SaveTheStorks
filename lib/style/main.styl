			margin-bottom 15px
			a
				color #FFF
				font-weight 300
				text-decoration none
				&:hover, &:active
					color #CFCFCF
	div.buttons
		padding 15px 30px
		a
			border-radius 3px
			color #FFF
			display block
			font-size 16px
			letter-spacing 0.175em
			padding 10px 0
			text-align center
			text-decoration none
			text-transform uppercase
			transition all 0.3s ease
			width 180px
		a#donate
			background #59C77F
			border 2px solid #59C77F
			margin-bottom 10px
			&:hover, &:active
				background darken(#59C77F, 25%)
