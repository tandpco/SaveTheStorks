.modal.video
	display none
	opacity 0
	height 0
	padding 25px
	width 100%
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	z-index 0
	transition opacity 0.3s ease
	.video-wrapper
		margin 0 auto
.overlay
	height 0
	opacity 0
	position absolute
	left 0
	right 0
	top 0
	bottom 0
	background rgba(#000,0.75)
	z-index 1
		
#canvas
	position relative
	transparent translateX(0)
	transition .3s ease all
	&.show-nav
		transform translateX(-320px)
		&:after
			transition all 0.3s ease
			content ''
			position absolute
			left 0
			right 0
			top 0
			bottom 0
			width 100%
			height 100%
			background rgba(#FFF, 0.6)
			z-index 999
.sideMenu
	background #1D1F20
	bottom 0
	color #666
	position absolute
	right -320px
	top 0
	height 100%
	width 320px
	overflow-y scroll
	z-index 9999
	.content
		margin 0
	a#account
		color #CFCFCF
		text-decoration none
		&:hover, &:active
			color darken(#CFCFCF, 10%)
