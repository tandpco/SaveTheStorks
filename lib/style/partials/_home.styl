			p
				margin-top 0
				font-size 35px
				font-weight 300
			@media (min-width: 769px)
				&:nth-of-type(2)
					border-left 1px solid darken(#f1f5f6, 15%)
				&:nth-of-type(3)
					border-left 1px solid darken(#f1f5f6, 15%)
					border-right 1px solid darken(#f1f5f6, 15%)
