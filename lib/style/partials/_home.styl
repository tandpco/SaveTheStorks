			letter-spacing 1px
	.bannerFour
		background transparent
		padding 60px 0
		text-align center
		p.byline
			color #E66477
			font-size 25px
			margin-bottom 5px
		h1
			margin-bottom 40px
			margin-top 0
			text-transform uppercase
			font-size 35px
		form.inline-form
			margin 80px 0 100px
		.col
			h1
				margin-bottom 0
				margin-top 20px
				text-transform uppercase
				small 
					display block
					font-weight 600		
