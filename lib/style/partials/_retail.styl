// Colors
$green      = #43C06E
$dark-gray  = #313436
$border     = #E7E7E7
$light-gray = #F1F5F6

.align-left
  text-align left
.align-center
  text-align center
.tr-up
  text-transform uppercase  

.callout
  background-color $dark-gray
  color #FFF
  line-height 100px
  margin 0 0 30px
  p
    font-size 30px
    font-weight 300
    margin 0
  a
    background-color $green
    border-radius 2px
    cursor pointer
    display inline-block
    color #FFF
    float right
    font-size 18px
    height auto
    line-height 20px
    margin 20px 0
    padding 20px 30px
    text-decoration none
    text-transform uppercase
    transition 300ms ease
    &:hover
      background-color darken($green, 15%)
  @media (max-width: 850px)
    line-height auto
    padding 15px 0
    text-align center
    p
      font-size 24px
      line-height 0
      margin 15px 0 0
    a
      padding 15px 20px
      float none
    .width-35
      margin-bottom 0
  @media (max-width: 480px)
    p
      font-size 16px
    a
      margin-bottom 0
.sectionThree
  h2
    color $dark-gray
    font-size 30px
    font-weight 300
    line-height 42px
    margin 0
    a
      color inherit
  @media (max-width: 768px)
    font-size 18px
    line-height 24px
  .space-down
    margin-bottom 45px
  .fundraiser-module
    border 1px solid $border
    border-radius 2px
    margin-bottom 20px
    overflow hidden
    position relative
    text-align left !important
    height 420px
    a
      color inherit
    h1, h2, p
      margin 0
      padding 0
    .thumbnail
      height 175px
      margin-bottom 30px
      overflow hidden
      position relative
      z-index 0
      img
        min-height 100%
        max-width none
        min-width 100%
        position absolute
        top 0
      .gradient-overlay
        background-color #000
        background linear-gradient(rgba(black, 0), black)
        bottom 0
        left 0
        opacity 0.5
        position absolute
        right 0
        top 0
        z-index 1
      .name
        bottom 10px
        left 70px
        position absolute
        right 10px
        z-index 3
        h2
          color #FFF
          font-size 16px
          font-weight 600
          line-height 18px
          a
            color inherit
            text-decoration none
            &:hover
              text-decoration underline
    .title
      left 10px
      min-height 52px
      overflow hidden
      position absolute
      right 10px
      top 145px
      .avatar
        border 2px solid #FFF
        border-radius 2px
        height 52px
        overflow hidden
        width 52px
      .author
        bottom 0
        font-size 12px
        line-height 12px
        left 60px
        position absolute
        text-transform uppercase
        small
          line-height 12px
          a
            color inherit
    .content
      min-height 85px
      padding 0 10px 20px
      p
        font-size 14px
        line-height 16px
    .progress
      border-top 1px solid $border
      bottom 40px
      left 0
      padding 15px 10px
      position absolute
      right 0
      .numbers
        color #929292
        font-weight 400
        margin-bottom 10px
        clearfix()
      .progress-bar
        background-color #F3F3F3
        height 8px
        overflow hidden
        position relative
        span
          background-color #929292
          display inline-block
          height 16px
          left 0
          position absolute
          top 0
    .footer
      border 0
      bottom 0
      margin 0
      padding 0
      left 0 
      position absolute
      right 0
      a
        border 0
        cursor pointer
        display inline-block
        line-height 40px
        float left
        font-size 12px
        text-decoration none
        text-transform uppercase
        &.share
          background-color #F3F3F3
          color #B4B4B4
          width 35%
        &.donate
          background-color #E6756F
          color #FFF
          width 65%
  .button-row
    margin-bottom 30px
    margin-top 45px
    @media (max-width: 768px)
      margin-top 30px
    @media (max-width: 480px)
      padding 0 15px
    a
      border-radius 2px
      display inline-block
      font-size 18px
      font-weight 600
      letter-spacing 0.05em
      line-height 60px
      padding 0 25px
      text-decoration none
      text-transform uppercase
      @media (max-width: 480px)
        font-size 16px
        width 100%
      &:first-of-type
        margin-right 30px
      @media (max-width: 768px)
        &:first-of-type
          margin-bottom 15px
          margin-right 0
      &.btn-green
        background-color $green
        border 1px solid $green
        color #FFF
        &:hover
          background-color darken($green, 10%)
      &.btn-outline
        background-color transparent
        border 1px solid $dark-gray
        color $dark-gray
        &:hover
          background-color rgba($dark-gray, 0.15)
.sectionFour
  background-color $light-gray
  padding 60px 0
  position relative
  .previous, .next
    bottom 0
    display table
    margin auto
    position absolute
    top 0
    @media (max-width: 1100px)
      display none
    i
      color darken($light-gray, 25%)
      cursor pointer
      font-size 48px
      transition color 300ms ease
      &:hover
        color darken($light-gray, 50%)
  .previous
    left 15px
  .next
    right 15px
  h1
    color $dark-gray
    font-size 40px
    font-weight 300
    letter-spacing 0.025em
    margin 0 0 30px
    text-align center
  .fundraiser-slider
    position relative
    overflow auto
    &.has-dots
      width 100% !important
    ul, li
      float left
      margin 0
      padding 0
    ul
      list-style none
      padding-bottom 60px
      li table
        padding-bottom 30px
        table-layout fixed
        width 100%
        @media (max-width: 768px)
          display block
          .label
            font-size 14px
            line-height 26px
            padding 0 5px
          h2
            font-size 18px
          p
            font-size 14px
            line-height 16px
          .fill
            display none
        td
          .label
            background-color #AAB0B2
            border-radius 2px
            color #FFF
            display inline-block
            font-size 18px
            font-weight 600
            line-height 30px
            padding 0 10px
            text-transform uppercase
          h2
            color #AAB0B2
            font-size 26px
          p
            color #666869
            font-size 16px
            line-height 20px
          img
            max-width 100%
    ol.dots
      bottom 0
      left 0
      list-style none
      margin 0
      text-align center
      position absolute
      right 0
      z-index 6
      li
        background-color $dark-gray
        border 2px solid $dark-gray
        border-radius 9px
        cursor pointer
        display inline-block
        float none
        height 9px
        margin 0 5px
        text-indent -9999px
        width 9px
        &.active
          background-color transparent
          border 2px solid $dark-gray
.sectionFive
  padding 60px 0 15px
  position relative
  clearfix()
  h1
    color $dark-gray
    font-size 40px
    font-weight 300
    letter-spacing 0.025em
    margin 0
    text-align center
    small
      display block
      font-size 40%
      line-height 20px
      &:first-of-type
        margin-top 10px
  table
    background-size cover
    table-layout fixed
    width 100%
    clearfix()
    td
      background-color #EEE
      background-size cover
      color #FFF
      height 220px
      vertical-align bottom
      a.text
        background-color rgba(black, 0.5)
        color inherit
        display block
        padding 10px 15px
        text-decoration none
        i
          position relative
          transition all 300ms ease
        &:hover
          i
            right -5px
    @media (max-width: 1024px)
      display block
      tr, td, tbody
         display block
      td
        margin-bottom 2%
        position relative
        float left
        width 48%
        .text
          bottom 0
          left 0
          position absolute
          right 0
        &.margin-right
          margin-right 2%
    @media (max-width: 510px)
      td
        float none
        margin-bottom 15px
        width 100%
        &.margin-right
          margin-right 0
          
.stork-supporters
  background-color $light-gray
  padding 30px 0
  table
    table-layout fixed
    width 100%
    @media (max-width: 768px)
      display block
      td, tbody, tr
        display block
      td
        margin-bottom 15px
    td
      vertical-align middle
      &.avatar
        width 80px
        span
          background-color #FFF
          border-radius 50%
          display inline-block
          height 80px
          overflow hidden
          position relative
          width 80px
          z-index 2
          img
            z-index 1
      blockquote
        font-size 16px
        line-height 20px
        font-style italic
        font-weight 400
        margin 0
        padding 0
        p, h1, h2, h3, h4, h5, h6, b, strong, i
          margin 0
          padding 0
        cite
          display block
          font-style normal
          font-weight 600
          margin 10px 0 0
.header
  h3
    font-size 30px
    font-weight 300
    line-height 30px
    .pull-right
      font-size 16px
  a
    color inherit
.banner.browse
  background-color #EEE
  background-image url('../images/dummy/fundraiser-browse-background.png')
  background-size cover
  height auto
  padding 100px 0
  h1
    color #FFF
    font-size 48px
    margin-top 0
    text-transform uppercase
  .btn-green
    border-radius 2px
    display inline-block
    font-size 18px
    font-weight 600
    letter-spacing 0.05em
    line-height 60px
    padding 0 25px
    text-decoration none
    text-transform uppercase
    @media (max-width: 480px)
      font-size 16px
      width 100%  
    background-color $green
    border 1px solid $green
    color #FFF
    &:hover
      background-color darken($green, 10%)
.search
  background-color #F1F5F6
  line-height 80px
  table
    border-collapse collapse
    table-layout fixed
    width 100%
  td
    input
      border-top-left-radius 2px
      border-bottom-left-radius 2px
  td.button
    width 20%
    button
      background-color #9B9B9B
      border 0
      border-bottom-right-radius 2px
      border-top-right-radius 2px
      color #FFF
      cursor pointer
      text-transform uppercase
      transition all 300ms ease
      &:hover
        background-color darken(#9B9B9B, 15%)
#limit
  margin 0 auto
  max-width 800px
  width 100%
  .video-wrapper.retail
    &:before, &:after
      display none
      
/*
 * Media Gallery Page
 */
.media-gallery
  transition all 300ms ease
  .featured-media
    background-color #1C2022
    color #FFF
    padding 45px 0 15px
    transition all 300ms ease
    .item-container
      text-align center
    .meta
      line-height 60px
      width 100%
      clearfix()
      h2
        float left
        font-size 24px
        font-weight 300
        margin 0
      a
        background-color $green
        border-radius 2px
        color inherit
        cursor pointer
        font-size 12px
        letter-spacing 0.05em
        padding 5px 10px
        text-decoration none
        text-transform uppercase
        &:hover
          background-color darken($green, 10%)
  .item
    border 1px solid #DBDBDB
    border-radius 2px
    cursor: pointer
    margin-bottom 20px
    transition all 300ms ease
    &:hover
      opacity 0.85
      .thumbnail img
        transform scale(1.5)
    .thumbnail
      height 200px
      width 100%
      img
        min-width 100%
        max-width none
        transition all 300ms ease
        // transform scale(1)
        transform translate3d(0,0,0)
    .item-footer
      font-size 12px
      font-weight 300
      padding 15px
      text-align left
      text-transform uppercase
      p
        display inline
        font-size 12px
        text-align left
        line-height 14px
        margin 0
        padding 0
        vertical-align middle
        
